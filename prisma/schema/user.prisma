model User {
  uuid     String @id @default(uuid())
  name     String
  email    String @unique
  password String
  active   Boolean @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  // Relacionamentos de criação e atualização
  ExpenseCreated Expense[] @relation("created_by_expense")
  ExpenseUpdated Expense[] @relation("updated_by_expense")

  //ExpenseCategory
  ExpenseCategoryCreated ExpenseCategory[] @relation("created_by_expense_category")
  ExpenseCategoryUpdated ExpenseCategory[] @relation("updated_by_expense_category")

  //RecurringExpense
  RecurringExpenseCreated RecurringExpense[] @relation("created_by_expense")
  RecurringExpenseUpdated RecurringExpense[] @relation("updated_by_expense")

  @@map("users")
}